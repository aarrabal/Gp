<Window x:Class="GestionPolicial.Views.Alert"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionPolicial"
        mc:Ignorable="d"
        Title="Alert" Height="150" Width="300" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" >
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"  Name="TextBlockAlert" Margin="10" FontSize="14"/>
        <Button Grid.Row="1" Name="BotonAceptar" Content="Aceptar" Margin="10" Click="ButtonBase_OnClick" Width="50" Height="25"/>
    </Grid>
</Window>
